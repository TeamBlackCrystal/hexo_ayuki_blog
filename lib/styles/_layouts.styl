.container
  margin 0 auto
  padding 0 1rem
  @media (min-width $MQWide)
    max-width (($MQWide + $MQNarrow) / 2)
  @media (min-width $MQNarrow) and (max-width $MQWide - 1px)
    max-width $MQNarrow
  @media (max-width $MQMobile - 1px)
    padding 0 0.5rem

.main-div
  padding 1.5rem
  background-color #ffffff
  border-radius 5px
  @media (max-width $MQMobile - 1px)
    padding 1rem
  &:not(:first-child)
    margin-top 1rem
  &:not(:last-child)
    margin-bottom 1rem
    @media (max-width $MQMobile - 1px)
      margin-bottom 0.5rem
  > :first-child
    margin-top 0

.yx-black-background
  background-color: #2A2A2A;
  color: white;

.clearfix
  &::after
    display block
    clear both
    content ''

.text-align-center
  text-align center

.auther-line
  text-align: center;
  border-right: dashed 3px #e0e0e0;
  border-left: dashed 3px #e0e0e0;
  height: 100%;
  width:100%;
  border-radius:2.5em;

.auther-box-shadow
  box-shadow: 0 5px 15px rgba(0,0,0,0.08);

.main,
.side
  border-radius: 10px

.auther-grid
  display: grid;
  grid-template-columns: 1fr 2fr;

@media(max-width: 400px)
  .auther-grid
    grid-template-columns: 1fr;

.auther-main
