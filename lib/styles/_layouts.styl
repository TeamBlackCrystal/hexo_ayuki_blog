@require '~@theme/styles/variables'
@import url('https://fonts.googleapis.com/css2?family=M+PLUS+1p');

.container
  margin 0 auto
  padding 0 1rem
  @media (min-width $MQWide)
    max-width (($MQWide + $MQNarrow) / 2)
  @media (min-width $MQNarrow) and (max-width $MQWide - 1px)
    max-width $MQNarrow
  @media (max-width $MQMobile - 1px)
    padding 0 0.5rem

.main-div
  padding 1.5rem
  background-color #ffffff
  border-radius 5px
  @media (max-width $MQMobile - 1px)
    padding 1rem
  &:not(:first-child)
    margin-top 1rem
  &:not(:last-child)
    margin-bottom 1rem
    @media (max-width $MQMobile - 1px)
      margin-bottom 0.5rem
  > :first-child
    margin-top 0

.yx-black-background
  background-color: #2A2A2A;
  color: white;

.clearfix
  &::after
    display block
    clear both
    content ''

.text-align-center
  text-align center

.auther-line
  text-align: center;
  border-right: dashed 3px #e0e0e0;
  height: 100%;
  width:80%;

.auther-box-shadow
  box-shadow: 0 5px 15px rgba(0,0,0,0.08);

.auther-grid
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: minmax(100px, auto);

.auther-icon
  border-radius:15px;
  position: relative;
  border: solid 3px #cfd8dc;

.auther-description
  line-height: 1.3em;
  color:#666666;
  font-family: 'M PLUS 1p', sans-serif;

.yx-page-auther
  border-bottom: solid 1px #1e88e5 ;
  width: 3.5em;

.yx-page-auther {
  border-bottom: solid 1px #1e88e5 ;
  width: 3.5em;
}
.balloon1 {
  position: relative;
  display: inline-block;
  margin: 1.5em 0;
  padding: 7px 10px;
  min-width: 120px;
  max-width: 100%;
  color: #555;
  font-size: 16px;
  background: #e0edff;
  border-radius:1em;
}
.balloon1:before {
  position: absolute;
  top: 100%;
  left: 50%;
  margin-left: 10px;
  border: 15px solid transparent;
  border-top: 15px solid #e0edff;
}
.balloon1 p {
  margin: 0;
  padding: 0;
}