#button
.button
  cursor: pointer;
  display: inline-block;
  padding: 0.25em 1.5em 0.25em 1.5em;
  color:white;
  border-radius:1em;
  transition:1s;
  box-shadow: 0 10px 20px rgba(0,0,0,0.25);

.button:hover
  display: inline-block;
  padding: 0.25em 1.5em 0.25em 1.5em;
  border-radius:1em;
  box-shadow: 0 10px 20px rgba(0,0,0,0.40);

.button-a-tag
  text-decoration: none !important;

img.emoji {
  height: 1em;
  width: 1em;
  margin: 0 .05em 0 .1em;
  vertical-align: -0.1em;
}

abbr
  position: relative;
  &::after
    content: attr(title);
    position: absolute;
    bottom: 100%;
    left: 50%;
    display: inline-block;
    min-width: 200px;
    padding: 1em;
    background: #7fbfff;
    border-radius: 4px;
    color: #fff;
    font-size: 14px;
    line-height: 1.4;
    transform: translateX(-25%);
    transition: .2s;
    opacity: 0;
    visibility: hidden;
  &:hover::before
    transition: .2s;
    position: relative;
    content: "";
    bottom: 150%;
    top: 100%;
    left: 5%;
    margin-left: -30px;
    border: 15px solid transparent;
    border-top: 15px solid #7fbfff;
  &:hover::after
    bottom: 150%;
    opacity: 1;
    visibility: visible;
